#!/bin/bash

# Navigation
alias cd..="cd .."
alias ..="cd .."

# Maven
alias mvnp="mvn -P"

# Vim to NeoVim
alias vim="nvim"
alias vi="nvim"
alias v="nvim"

# System
alias sdn="sudo shutdown now"

# Programs
alias nv="nvim"
alias snv="sudo nvim"
alias r="ranger"
alias sr="sudo ranger"
alias gitlog="git log --oneline --graph"

# Auto Color
alias ls="ls -hN --color=auto --group-directories-first"
alias grep="grep --color=auto"
alias diff="diff --color=auto"